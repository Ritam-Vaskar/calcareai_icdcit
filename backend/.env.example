# CareCall AI Environment Variables
# Copy this file to .env and update with your actual values

# Backend Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/carecall-ai

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-in-production-min-32-chars
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Twilio Configuration (REQUIRED for calling)
# Get from https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
# Use localtunnel or ngrok URL (run: npx localtunnel --port 5000)
TWILIO_WEBHOOK_URL=https://your-tunnel-url.loca.lt

# GitHub Models AI (REQUIRED for AI conversation)
# Get from https://github.com/settings/tokens (create a personal access token)
# Free tier with GPT-4o-mini model
GITHUB_TOKEN=your_github_token_here

# Deepgram (OPTIONAL - for advanced AI speech-to-text)
# Get from https://console.deepgram.com
# Free tier: 45,000 minutes/month
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Google Cloud TTS (OPTIONAL - for text-to-speech)
# Uses application default credentials by default
# If needed, get free API key from: https://console.cloud.google.com/
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Webhook URL (for production)
WEBHOOK_BASE_URL=https://your-domain.com
